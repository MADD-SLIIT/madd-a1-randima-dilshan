<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="20dp">

    <!-- Centered Logo -->
    <LinearLayout
        android:id="@+id/dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <!-- Simulating 3 dots -->
        <View
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_margin="4dp"
            android:background="@drawable/dot_indicator_inactive" />


        <View
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_margin="4dp"
            android:background="@drawable/dot_indicator_inactive" />
        <View
            android:layout_width="17dp"
            android:layout_height="4dp"
            android:layout_margin="4dp"
            android:background="@drawable/dot_indicator_active" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logow"
        android:layout_width="243dp"
        android:layout_height="71dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/logow" />

    <!-- Welcome Text -->

    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Jacklup Solutions"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_below="@id/logow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/welcome_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Gateway to Exceptional Digital Services"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/welcome_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <!-- Container for Buttons -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Login Button with Gradient -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/gradient_button"
            android:text="Login"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:textStyle="bold"/>

        <!-- Register Button with Border -->
        <Button
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/outline_button"
            android:padding="10dp"
            android:text="Register"
            android:textColor="#A384FF"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Footer Text -->
    <TextView
        android:id="@+id/footer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By proceeding, you agree to our Terms and Conditions."
        android:textSize="12sp"
        android:textColor="#A384FF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
